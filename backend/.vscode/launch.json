{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Deno",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/backend/main.ts",
			"runtimeExecutable": "deno",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--allow-all",
				"--unstable",
			],
			"outputCapture": "std",
			"attachSimplePort": 9229,
		}
	]
}